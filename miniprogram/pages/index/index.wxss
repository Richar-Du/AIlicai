/**index.wxss**/
@import '../../style/guide.wxss';
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.8;
} 

.name{
  color: black;
  text-shadow:  0px 0px 20px green;
  font-size: 40rpx
}
.logo-wrapper {
  margin-bottom: 300rpx;
  text-align: center;
}

.logo-wrapper .name {
  display: block;
  font-weight: 400;
}

.logo {
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-style: solid;
  border-width: 4rpx;
  border-color:rgb(196, 196, 196);
}

.button {
  height: 100rpx;
  line-height: 90rpx;
  background: linear-gradient(270deg, rgba(62, 175, 213, 0.788) 0%, rgba(62, 175, 213, 0.801) 100%);
  border-radius: 6rpx;
  margin: 0 120rpx;
}

.button-text {
  font-size: 45rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 56rpx;
}
